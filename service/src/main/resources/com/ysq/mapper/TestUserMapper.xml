<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ysq.repository.TestUserRepository">

    <resultMap id="BaseResultMap" type="com.ysq.model.db.TestUserDBBean">
        <id column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nick_name" property="nickName" jdbcType="VARCHAR"/>
        <result column="del_flag" property="delFlag" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,user_name,password,nick_name,del_flag
    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        select * from test_user where del_flag=0
    </select>


    <insert id="insert" useGeneratedKeys="true" keyProperty="bean.userId"
      keyColumn="user_id" parameterType="com.ysq.model.db.TestUserDBBean">
        insert into test_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bean.userName != null">user_name,</if>
            <if test="bean.password != null">password,</if>
            <if test="bean.nickName != null">nick_name,</if>
            <if test="bean.delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="bean.userName != null">#{bean.userName,jdbcType=VARCHAR},</if>
            <if test="bean.password != null">#{bean.password,jdbcType=VARCHAR},</if>
            <if test="bean.nickName != null">#{bean.nickName,jdbcType=VARCHAR},</if>
            <if test="bean.delFlag != null">#{bean.delFlag,jdbcType=INTEGER},</if>
        </trim>
    </insert>

    <update id="delete">
        update test_user
        set del_flag = 1
        where user_id = #{id}
    </update>


    <update id="update">
        update test_user
        <set>
            <if test="bean.userName != null">user_name=#{bean.userName},</if>
            <if test="bean.password != null">password=#{bean.password},</if>
            <if test="bean.nickName != null">nick_name=#{bean.nickName},</if>
            <if test="bean.delFlag != null">del_flag=#{bean.delFlag},</if>
        </set>
        where user_id=#{bean.userId}
    </update>

</mapper>